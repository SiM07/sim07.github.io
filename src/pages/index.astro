---
import About from "../components/About.astro";
import Links from "../components/Links.astro";
import Layout from "../layouts/Layout.astro";
---

<Layout>
  <main>
    <div class="outer">
      <div class="inner">
        <About />
        <Links />
      </div>
    </div>
  </main>
</Layout>

<style>
  .outer {
    display: flex;
    height: 100dvh;
    align-items: center;
    justify-content: center;
  }

  .inner {
    margin: 0 0.5em;
    z-index: 1;
    padding-bottom: 6.5em;
  }
</style>
